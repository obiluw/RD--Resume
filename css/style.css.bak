/*- 导入字体库 -*/
@font-face {
    font-family: 'Nunito-Bold';
    src:url(../fonts/Nunito-Bold.ttf) format('truetype');
}
@font-face {
    font-family: 'OpenSans-Regular';
    src:url(../fonts/OpenSans-Regular.ttf) format('truetype');
}
/*全局*/
a:hover{
 text-decoration:none;  /*鼠标放上去有下划线*/
}
body a{
    transition:1.5s all;
	-webkit-transition:1.5s all;
	-moz-transition:1.5s all;
	-o-transition:1.5s all;
	-ms-transition:1.5s all;
}
:hover{
	transition:1.5s all;
	-webkit-transition:1.5s all;
	-moz-transition:1.5s all;
	-o-transition:1.5s all;
	-ms-transition:1.5s all;
}
input[type="button"]{
	transition:1.5s all;
	-webkit-transition:1.5s all;
	-moz-transition:1.5s all;
	-o-transition:1.5s all;
	-ms-transition:1.5s all;
}
h1,h2,h3,h4,h5,h6{
	padding:0 0;
	margin:0 0;
}
p{
	padding:0 0;
	margin:0 0;
}
ul{
	padding:0 0;
	margin:0 0;
}
body{
	padding:0 0;
	margin:0 0; 
	font-family: 'OpenSans-Regular';
}


/*----Head----*/
.header-section {
  background: url(../images/banner.jpg) repeat 0px 0px ;
  text-align: center;
   
    min-height: 500px;
}
.header-section img {
  margin-top: 7em;
}
.header-section h1 {
  font-family: 'Nunito-Bold';
  font-size: 4em;
  text-transform: capitalize;
  color: #fff;
  padding: 0.5em 0 0 0;
}
.header-section span {
  color: #fff;
  font-size: 1em;
}
.header-section p {
  font-family: 'Nunito-Bold';
  font-size: 1.3em;
  color: #fff;
}
span.glyphicon.glyphicon-triangle-bottom {
  border:2px solid #fff;
  font-size: 2em;
  color: #fff;
  background-color: rgb(0, 210, 210);
  padding: 0.5em 2em;
  border-radius: 5px 5px 0 0;
  position:relative;
  margin-top: 2em;
}
span.glyphicon.glyphicon-triangle-bottom:hover{
  border:2px solid #000;
}
.border {
    background: #52edc7;
    width: 30%;
    margin: 10px auto;
    padding: 1px;
}
/*---- Head end ----*/


/*---- About me ----*/
.about {
    padding: 100px 0;
	text-align:center;
}
.about h3 {
    margin: 0;
    color: #2b2b2b;
    font-size: 3.0em;
    font-weight: 500;
    letter-spacing: 18px;
}
.about p{
    margin: 45px 0 0 0;
    color: #888b90;
    font-size: 18px;
    font-family: 'Microsoft YaHei';
    line-height: 1.8em;
	font-weight:800;
}
.about img{
	margin: 28px 0 0px 0;
}
.about-back {
    background: url(../images/about-b.jpg) no-repeat 0px 0px;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 102px;
}
/*---- About me end ----*/


.study-section-back {
    background: url(../images/myskill-b.jpg) no-repeat 0px 0px;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 102px;
}
.study-section {
  padding: 4em 0;
  background: #1abc9c;
  padding: 60px 0;
}
.study-grid h3 {
  font-family: 'Nunito-Bold';
  font-size: 2.5em;
  text-transform: capitalize;
  color: #fff;
}
.study-grid span {
  color: #52edc7;
  font-size: 0.9em;
}
.study-grid p {
  font-size: 1.2em;
  color: #fff;
  padding: 1.1em 0 0 0;
  font-weight: 500;
  }
.study-grid label {
  font-size: 0.8em;
  color: #9CA69D;
  margin: 0 0 0 7px;
}
.progress {
	margin: 10px 0;
	box-shadow: none;
	border:2px solid #ddd;
}
.progress:hover {
	border:2px solid #000;
}


.progress-bar{			/* 修改进度条样式 */
	box-shadow: none;
	background-color: #049ff1;
}
.progress-bar-success {
  background-color: #a2b700;
   box-shadow: none;
}
.progress-bar-info {
  background-color: #ACB5B8;
    box-shadow: none;
}
.progress-bar-warning {
  background-color: #da891e;
   box-shadow: none;
}
.progress-bar-danger {
  background-color: #78B3AE;
  box-shadow: none;
  }
.study-grid h4 {
  font-size: 1.3em;
  text-transform: capitalize;
  font-weight: 400;
  color:#fff;
  padding: 1.1em 0 0;
  }
.study1 {
  padding: 1em 0 0;
}
.service-section {
  text-align: center;
  padding: 4em 0;
  background:#eee;
}
.service-grid h4 {
  color:#555;
  font-size: 1.5em;
  margin: 0.9em 0;
  font-family: 'Nunito-Bold';


}
.service-grid p {
  font-size: 1em;
  font-weight: 400;
  color: #9CA69D;
    line-height: 1.8em;
}
span.glyphicon.glyphicon-pencil {
  font-size: 2em;
  color: #C6D9C7;
  border-radius: 50px;
  border: 2px solid;
  padding: 1em;
}
span.glyphicon.glyphicon-phone{
font-size: 2em;
  color: #C6D9C7;
  border-radius: 50px;
  border: 2px solid;
  padding: 1em;
}
span.glyphicon.glyphicon-signal{
font-size: 2em;
  color: #C6D9C7;
  border-radius: 50px;
  border: 2px solid;
  padding: 1em;
}
.service-section-back {
    background: url(../images/clien-b.jpg) no-repeat 0px 0px;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 102px;
}

/*--PORTFOLIO--*/
.gallery-section{
	background: url(../images/port-back.jpg) no-repeat 0px 0px;
	background-size: cover;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	text-align: center;
	min-height:1404px;
    padding: 140px 0 0px 0;
}
#portfolio p {
  font-family: 'Lato', sans-serif;
  line-height: 1.8em;
  margin: 25px 0 0 0;
  font-size: 18px;
  color: #ffffff;
  font-weight: 300;
}
.gallery-section h3{
  margin: 0;
  color: #ffffff;
  font-size: 3.0em;
  font-weight: 500;
  letter-spacing: 18px;
  padding:0 0 30px 0;
}
.gallery-grid {
  padding: 0;
}
.gallery1 {
position:relative;
}
.gallery1 .textbox {
width:100%;
height:100%;
position:absolute;
top:0;
left:0;
-webkit-transform: scale(0);
transform: scale(0);
background-color:rgba(82, 237, 199, 0.5);
}
.gallery1:hover .textbox {
-webkit-transform: scale(1);
transform: scale(1);
}
.gallery-grid img{
width:100%;
}

.textbox {
-webkit-transition: all 0.7s ease;
transition: all 0.7s ease;
}
.textbox h4 {
  font-family: 'Lato', sans-serif;
  font-size: 22px;
  color: #fff;
  margin-top: 115px;
}
.textbox p {
  font-size: 12px !important;
  color: #fff;
  font-weight:500 !important;
  margin:6px 0 0 0!important;
}
.gallery-grids {
  margin-top: 50px;
}
.button:hover{
 border: 2px solid #000;
}
.button {
  border: 2px solid #fff;
  padding: 10px;
  width: 34%;
  cursor:pointer;
  text-align:center;
  margin: 20px auto 0 auto;
}
.button a {
display:block;
color:#fff;
font-family: 'Lato', sans-serif;
font-size:18px;
font-weight:700;
}
/*--  //PORTFOLIO  --*/


/*--  work  --*/
#work {
	background-color:#52edc7;
}

.about .panel p{
    color: #2b2b2b;
}
.work h3 {
    margin: 0;
    color: #fff;
    font-size: 3.0em;
    font-weight: 500;
    letter-spacing: 18px;
}

body #group_work a{
	color:#2b2b2b;
}
body #group_work a:hover{
	color:#aaa;
}
.work-back {
    background: url(../images/pro-b.jpg) no-repeat 0px 0px;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 102px;
}

/*--  //work  --*/



/*--  footer  --*/
.footer-section{
	padding:2em 0;
	text-align:center;
	background:#deecdf;
}
.footer-top p {
	font-size: 0.9em;
	color: #1B1B1B;
	font-weight: 400;
}
.footer-top  a {
	font-size: 1em;
	color:#1B1B1B;
	font-weight: 400;
	text-transform: capitalize;
}
.footer-top a:hover {
	color: #1B1B1B;
}
.footer-top a {
	margin: 0 6px 0 6px;
}
/*--  //social-icons  --*/
#toTop {
	display: none;
	text-decoration: none;
	position: fixed;
	bottom: 10px;
	right: 10px;
	overflow: hidden;
	width: 48px;
	height: 48px;
	border: none;
	text-indent: 100%;
	background: url("../images/to-top2.png") no-repeat 0px 0px;
}

#five,#work{
	text-align:center;
}
#five{
	color:#fff;
	padding:30px 0 10px 0;
	margin:0 auto;
}
#five dt{
	font-size:1.5em;
}
#five dd{
	font-size:1.2em;
}
#scroll_1{
	position:absolute;
	background-color:#333;
	padding:50px 10px;
	font-family: 'Microsoft YaHei';
	font-weight:none;
	height:90%;
	width:30%;
	left:10%;
}
#scroll_1 p{
	text-align:left;
	margin:20px 10px;
	font-size:1.2em;
}

.aside{
	position:fixed;
	right:0;
	top:40%;
	z-index:20;
}

.study-grid .panel-body {
	background-color: transparent;
}

.picture{
	background:#eee;
	padding:0 0 80px;
}

.picture-back {
    background: url(../images/clien-b.jpg) no-repeat 0px 0px;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 102px;
}
/*-- responsive-design --*/

/*-- max-width: 1024px --*/
@media only screen and (max-width:1024px) {
.header-section h1 {
   font-size: 3em;
 }
.header-section p {
	font-size: 1.2em;
}
.study-grid h3 {
   font-size: 2em;
 }
.study-grid p {
  font-size: 1.1em;
}
.study-grid h4 {
  font-size: 1.3em;
 }
 .service-grid h4 {
  font-size: 1.3em;
 }
 .service-grid p {
  font-size: 0.965em;
 }
.contact-section h3 {
    font-size: 2em;
}
}

/*-- max-width: 768px --*/
@media only screen and (max-width: 768px){
.header-section {
   min-height: 472px;
}
.header-section h1 {
  font-size: 2.5em;
}
.header-section p {
  font-size: 1.1em;
}
span.glyphicon.glyphicon-triangle-bottom {
  font-size: 1.5em;
}
.study-section {
  padding: 3em 0;
}
.study-grid h3 {
  font-size: 1.6em;
}
.study-grid p {
  font-size: 1em;
  padding: 1.2em 0 0 0;
}
.study-grid h4 {
  font-size: 1.1em;
}
.service-section {
  text-align: center;
  padding: 3em 0;
}
.service-grid {
  float: none;
  width:100%;
  }
.service-grid h4 {
  font-size: 1.1em;
}
.service-grid p {
  font-size: 0.95em;
}
.contact-section {
  padding: 3em 0;
}
.contact-section h3 {
  font-size: 1.6em;
  margin-bottom: 1.5em;
}
.contact-left {
  float: left;
  width: 50%;
}
.contact-right {
  float: left;
  width: 50%;
}
}

